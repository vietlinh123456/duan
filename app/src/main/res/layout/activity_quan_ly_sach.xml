<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".QuanLySach">

    <ImageView
        android:id="@+id/img_prev"
        android:layout_width="48dp"
        android:layout_height="61dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="322dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_banChay"
        app:srcCompat="@drawable/prev" />


    <ImageView
        android:id="@+id/img_nguoiDung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="43dp"
        app:layout_constraintEnd_toStartOf="@+id/img_sach"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nguoidung" />


    <ImageView
        android:id="@+id/img_theLoai"
        android:layout_width="157dp"
        android:layout_height="141dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_hoaDon"
        app:layout_constraintTop_toBottomOf="@+id/img_sach"
        app:srcCompat="@drawable/cateicon" />

    <ImageView
        android:id="@+id/img_sach"
        android:layout_width="169dp"
        android:layout_height="152dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_nguoiDung"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bookicon" />

    <ImageView
        android:id="@+id/img_hoaDon"
        android:layout_width="156dp"
        android:layout_height="136dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintEnd_toStartOf="@+id/img_theLoai"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_nguoiDung"
        app:srcCompat="@drawable/hdicon" />

    <ImageView
        android:id="@+id/img_banChay"
        android:layout_width="170dp"
        android:layout_height="144dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="43dp"
        app:layout_constraintEnd_toStartOf="@+id/img_thongKe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_hoaDon"
        app:srcCompat="@drawable/money_icon" />

    <ImageView
        android:id="@+id/img_thongKe"
        android:layout_width="157dp"
        android:layout_height="133dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_banChay"
        app:layout_constraintTop_toBottomOf="@+id/img_theLoai"
        app:srcCompat="@drawable/thongke" />

</androidx.constraintlayout.widget.ConstraintLayout>